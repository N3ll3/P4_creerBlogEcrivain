{% extends 'homeLayout.twig' %}


{% block nav %}
    {{include("navbar.html.twig") }}

{% endblock %}

{% block sectionIntro %}
    <h1>
        Modifier un chapitre
    </h1>

{% endblock %}

{% block post %}


    <form action='index.php?action=modifyPost&amp;idPost={{post.id}}' method="post">
        <h2>
            Titre de votre chapitre
        </h2>
        <textarea name="title">
            {{post.title}}</textarea>
        <h2>
            Contenu de votre chapitre
        </h2>
        <textarea id="content" name="content">{{post.content}}</textarea>
        <input type="submit">
    </form>
{% endblock %}
