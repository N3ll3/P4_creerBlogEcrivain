{% extends 'homeLayout.twig' %}
{% block title %}
<title> Espace Administrateur </title>
{% endblock %}


{% block nav %}

{{include("navbar.html.twig") }}

{% endblock %}


{% block sectionIntro %}

<h1 class="main intro">Espace Administrateur</h1>

{% endblock %}
{% block admin %}

<div class="accesAdmin justify-content-center text-center">

    <a class="btn btn-info btn-lg btn-block"  href="index.php?action=writePostAcces">
        Ecrire un chapitre</a>
</div>

<div class="accesAdmin justify-content-center text-center">

    <a class="btn btn-info btn-lg btn-block" href="index.php?action=moderateComment">
        Modérer les commentaires
    </a>
    {% if nbCommentFlagged %}
    <p class="main">
        Vous avez
        {{nbCommentFlagged}}
        commentaire(s) à modérer</p>
    {% else %}
    <p class="main">
        Vous n'avez aucun commentaire à modérer</p>
    {% endif %}

</div>
{% endblock %}

{% block post %}

    {% if datas %}
    <h4 class="main text-center">
        Chapitre en cours de Rédaction
    </h4>

    {% for data in datas %}
    <article class="post container main">

        <h3 class="postTitle main">
            {{data.title | raw }}
        </h3>

        <div class="content">
            {{data.content_limit | raw}}
        </div>
        <a class="btn btn-info" href="index.php?action=writePostAcces&amp;idPost={{data.id}}">Continuer la
            rédaction du chapitre</a>
    </article>
    <hr>
    {% endfor %}
    {% else %}
    <p class="main text-center">
        Vous n'avez aucun chapitre en cours de rédaction
    </p
    {% endif %}

{% endblock %}