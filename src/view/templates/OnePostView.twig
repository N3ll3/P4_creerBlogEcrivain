{% extends 'homeLayout.twig' %}
{% block title %}
    <title>
        Blog de Jean Forteroche, acteur et écrivain.
    </title>
{% endblock %}
{% block header %}
{% block nav %}
    {% if session.isAuth is null %}

        <nav>

            <ul>
                <li><a href="index.php?action=connexion">Accès Espace Administrateur</a></li>
            </ul>

        </nav>

    {% else %}
        <nav>
            <ul>
                <li>
                    Mon profil
                </li>
                <li>
                    <a href="index.php?action=writePostAcces">Ecrire un article</a>
                </li>
                <li>
                    <a href="index.php?action=moderateComment">Moderer commentaires</a>
                </li>
                <li>
                    <a href="index.php?action=logout">Se deconnecter</a>
                </li>
            </ul>
        </nav>
    {% endif %}
{% endblock %}


    <h1>Mon super blog !</h1>
    <p>
        <a href="index.php">Retour à la liste des billets</a>
    </p>
{% endblock %}
{% block post %}
    <div class="posts">
        <h3>
            {{post.title | raw}}
            <em>le
                {{post.creation_date_fr}}</em>
        </h3>

        <p>
            {{post.content | raw}}
        </p>
    </div>
{% endblock %}
{% block comment %}
    <h2>Commentaires</h2>
    <form action="index.php?action=addComment&amp;id={{post.id}}" method="post">
        <div>
            <label for="author">Auteur</label>
            <br/>
            <input id="author" name="author" type="text"/></div>
        <div>
            <label for="comment">Commentaire</label>
            <br/>
            <textarea id="comment" name="comment"></textarea>
        </div>
        <div>
            <input type="submit"/></div>
    </form>
    {% for comment in comments %}
        <p>
            <strong>{{comment.author}}</strong>
            le
            {{comment.comment_date_fr}}</p>

        <p>{{comment.comment}}</p>

        <a href="index.php?action=flag&amp;idComment={{comment.id}}&amp;postId={{post.id}}">
            Signaler ce commentaire</a>
    {% endfor %}
{% endblock %}
