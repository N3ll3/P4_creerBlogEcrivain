{% extends 'homeLayout.twig' %}
{% block title %}
    <title>
        Blog de Jean Forteroche, acteur et écrivain.
    </title>
{% endblock %}

{% block nav %}
    {% if session.isAuth is null %}
        <div class="navbar-header">
            <p class="navbar-brand">
                Blog de Jean Forteroche, acteur et écrivain
            </p>

        </div>
        <ul class="nav navbar-nav">
            <li>
                <a href="index.php">Retour à la liste des chapitres</a>
            </li>
            <li>
                <a href="#comments">
                    Voir les commentaires</a>
            </li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="index.php?action=connexion">Se connecter</a>
            </li>
        </ul>

    {% else %}

        {{include("navbar.html.twig") }}

    {% endif %}
{% endblock %}
{% block sectionIntro %}
    <h1>
        Billet simple pour l'Alaska</h1>


{% endblock %}
{% block post %}
    <div class="post container">
        {% if session.isAuth %}
            <a class="modifChap" href="index.php?action=modifyPostAcces&amp;idPost={{post.id }}">
                Modifier le chapitre
            </a>
        {% endif %}

        <h3 class="postTitle">
            {{post.title | raw}}</h3>
        <p class="date">Publié le
            {{post.creation_date_fr |  date("d/m/Y") }}
        </p>
        <p class="content">
            {{post.content | raw}}
        </p>
    </div>
{% endblock %}

{% block form %}
    <h2>Commentaires</h2>

    <form action="index.php?action=addComment&amp;id={{post.id}}" method="post">
        <div>
            <label for="author">Auteur</label>
            <br/>
            <input id="author" name="author" type="text"/></div>
        <div>
            <br>
            <label for="comment">Commentaire</label>
            <br/>
            <textarea id="comment" name="comment"></textarea>
        </div>
        <div>
            <input class="btn btn-secondary" type="submit" value="Envoyer"/>
        </div>
    </form>
{% endblock %}


{% block comment %}

{% for comment in comments %}
    <div class="comment container">
        {% if comment.flagged > 0 %}
            <p class="flagged">
                Ce commentaire a été signalé
                <span id="comment{{comment.id | raw }}">{{comment.flagged| raw }}</span>
                fois
            </p>
        {% endif %}
        <strong>{{comment.author}}</strong>
        le
        {{comment.comment_date_fr}}</p>

    <p>{{comment.comment}}</p>

    <form class="flagComment" id="flagComment{{comment.id | raw }}">

        <input id="idComment" name="idComment" type="hidden" value="{{comment.id | raw }}"/>

        <button class="btn btn-secondary" type="submit">

            Signaler ce commentaire
        </button>
    </form>

</div>{% endfor %}{% endblock %}{% block script %}<script src="public/js/flag.js"></script><script></script>{% endblock %}
